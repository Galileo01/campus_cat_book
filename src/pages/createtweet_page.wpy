<template>
  <view class="createtweet_page">
    <view class="content">
      <view class="texts">
        <textarea
          model:value="{{text}}"
          placeholder="分享新鲜事"
          placeholder-class="placeholder"
        ></textarea>
        <text class="count">{{ text.length }}/140</text>
        <view class="imgs">
          <image v-for="(item, index) in imgs" :src="item" :key="index"></image>
        </view>
        <view class="video"></view>
      </view>
    </view>
    <view class="btns">
      <van-icon name="photo-o" size="60rpx" @tap="showChoose('img')"></van-icon>
      <van-icon
        name="video-o"
        size="60rpx"
        @tap="showChoose('video')"
      ></van-icon>
      <van-icon
        name="passed"
        size="60rpx"
        class="passed"
        color="#fff"
      ></van-icon>
      <view class="jinghao">
        #
      </view>
      <van-icon name="location-o" size="60rpx"></van-icon>
    </view>
    <van-action-sheet
      :show="isshowchoose"
      :actions="actions"
      @close="sheetCloseHandler"
      @select="selectHander"
      :title="mediaType === 'img' ? '图片来源' : '视频来源'"
    />
  </view>
</template>
<style lang="less">
