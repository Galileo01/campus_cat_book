<script>
import wepy from '@wepy/core';
wepy.page({
  data: {
    type: 'plain', //新建动态的模式
    text: '',
    wrodCount: 0,
    imgs: [],
    video: '',
    mediaSrcType: 'album', //图片和视频的来源
    mediaType: 'img', //当前选择的 媒体类型
    isshowchoose: false, //是否显示选择菜单
    actions: [
      //菜单选项
      {
        name: '本地',
        id: 0,
      },
      {
        name: '拍摄',
        id: 1,
      },
    ],
  },
  computed: {
    imgLength() {
      return this.imgs.length;
    },
  },
  /*TODO: 
  1.按照tweetitem 图片宽度的计算方式，
  2.编写 添加图片或者添加视频的按钮，两者只能选一个添加
  
  */
  methods: {
    onClickLeft() {
      this.$back();
    },
    textInput() {},
    chooseImg() {
      const self = this;
      console.log(this.mediaSrcType);
      wx.chooseImage({
        sizeType: ['original'],
        sourceType: this.mediaSrcType,
        success(res) {
          const tempFilePaths = res.tempFilePaths;
          console.log(tempFilePaths);
          self.imgs = tempFilePaths;
        },
      });
    },
    chooseVideo() {
      const self = this;
      console.log(this.mediaSrcType);
      wx.chooseVideo({
        sourceType: this.mediaSrcType,
        maxDuration: 120,
        camera: 'back',
        success(res) {
          const tempFilePaths = res.tempFilePaths;
          console.log(tempFilePaths, self);
        },
      });
    },
    showChoose(type = 'img') {
      this.mediaType = type;
      this.isshowchoose = true;
    },
    sheetCloseHandler() {
      this.isshowchoose = false;
    },
    selectHander(e) {
      const select = e.$wx.detail.id;
      const types = ['album', 'camera'];
      this.mediaSrcType = types[select];
      if (this.mediaType === 'img') {
        this.chooseImg();
      } else {
        this.chooseVideo();
      }
    },
  },
  onLoad({ type }) {
    console.log(type);
    if (type) {
      this.type = type;
      if (type !== 'plain') {
        //进入页面时 已经选好 媒体类型，显示选择框
        this.showChoose(type);
      }
    }
  },
});
</script>
