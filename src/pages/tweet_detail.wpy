<script>
import wepy from '@wepy/core';
import Toast from 'components/vant/toast/toast';
wepy.page({
  data: {
    id: 0,
    tweetInfo: {},
    comments: [],
    imgSrc: '',
    imgDialogVisible: false,
    commentInputVivisble: false,
    mycomment: '',
    backTopVisible: false,
  },
  methods: {
    getData() {
      const data = {
        userinfo: {
          name: 'user1',
          campus: 'cqut',
          id: 1,
          avatar: 'https://ftp.bmp.ovh/imgs/2020/03/91f2a75bc35728a7.jpg',
        },
        tweetTime: '2020.07.14 20:22',
        collectCount: 5,
        transmitCount: 0,
        commentCount: 5,
        starCount: 6,
        id: 2,
        text: '毕业了',
        imgs: [
          'https://wx2.sinaimg.cn/mw690/6cd6d028ly4ggv1ek5z72j20c80c8aas.jpg',
          'https://wx2.sinaimg.cn/mw690/6cd6d028ly4ggv1ek5z72j20c80c8aas.jpg',
        ],
        video: '',
        topic: '666',
      };
      const comments = [
        {
          userID: 2,
          content: '666',
          time: '2020 0717 19:01',
          star: 0,
          commentID: 1,
        },
        {
          userID: 3,
          content: '666',
          time: '2020 0717 19:01',
          star: 2,
          commentID: 2,
        },
        {
          userID: 2,
          content: '666',
          time: '2020 0717 19:01',
          star: 0,
          commentID: 3,
        },
        {
          userID: 2,
          content: '666',
          time: '2020 0717 19:01',
          star: 0,
          commentID: 4,
        },
        {
          userID: 2,
          content: '666',
          time: '2020 0717 19:01',
          star: 0,
          commentID: 5,
        },
        {
          userID: 2,
          content: '666',
          time: '2020 0717 19:01',
          star: 0,
          commentID: 6,
        },
      ];
      this.tweetInfo = data;
      this.comments = [...comments, ...comments].map((item) => {
        return {
          ...item,
          userinfo: {
            name: '张三',
            id: 1,
            campus: 'cqut',
            avatar: 'https://ftp.bmp.ovh/imgs/2020/03/91f2a75bc35728a7.jpg',
          },
        };
      });
    },
    enlargeTap(src) {
      // console.log(src);
      this.imgSrc = src;
      this.imgDialogVisible = true;
    },
    closeImgDialog() {
      this.imgDialogVisible = false;
      this.$nextTick(() => {
        this.imgSrc = '';
      });
    },
    //展示评论输入框
    showCommentInput() {
      this.commentInputVivisble = true;
    },
    commentInput({ $wx: { detail } }) {
      //   console.log(detail);
      this.mycomment = detail;
    },
    closeInput() {
      this.commentInputVivisble = false;
      this.mycomment = '';
    },
    starTap() {
      Toast('点赞成功');
    },
    collectTap() {
      Toast('收藏成功');
    },
    starComment(id) {
      Toast('点赞成功');
      console.log(id);
      for (const item of this.comments) {
        if (item.commentID === id) {
          item.star++;
          break;
        }
      }
    },
    seeUserInfo(id) {
      console.log(id);
      this.$navigate('/pages/userinfo?id=' + id);
    },
    sendComment() {
      if (this.mycomment) {
        Toast.loading({
          mask: true,
          duration: 0, //一致显示toast
          message: '发送中...',
        });
        //请求成功 后关闭，模拟
        const timer = setTimeout(() => {
          this.comments.push({
            userID: 2,
            content: this.mycomment,
            time: '2020 0723 19:01',
            star: 0,
            commentID: 7,
            userinfo: {
              name: '王五',
              id: 2,
              campus: 'cqut',
              avatar: 'https://ftp.bmp.ovh/imgs/2020/03/91f2a75bc35728a7.jpg',
            },
          });
          this.closeInput();
          Toast.clear();
          clearTimeout(timer);
        }, 500);
      } else {
        Toast.fail('评论内容为空');
      }
    },
  },
  onLoad({ id}) {
    console.log(id);
    this.id = id;
    wx.showNavigationBarLoading();
    this.getData();
    wx.hideNavigationBarLoading();
  },
  onPageScroll({ scrollTop }) {
    if (scrollTop > 300) {
      this.backTopVisible = true;
    } else this.backTopVisible = false;
  },
});
</script>

