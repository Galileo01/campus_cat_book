<template>
  <view class="tweet_detail container">
    <view class="baseinfo">
      <tweet-item
        :item="tweetInfo"
        mode="detail"
        @enlarge="enlargeTap"
        @seeUserInfo="seeUserInfo"
      ></tweet-item>
    </view>
    <view class="comments">
      <view class="comment-item" v-for="(item, index) in comments">
        <view class="avater">
          <image
            :src="item.userinfo.avatar"
            @tap="seeUserInfo(item.userinfo.id)"
          ></image>
        </view>
        <view class="content">
          <view>{{ item.userinfo.name }}:</view>
          <view class="text">{{ item.content }}</view>
          <view class="bottom">
            <view class="left"
              ><text class="time">{{ item.time }}</text>
              <text class="campus">{{ item.userinfo.campus }}</text></view
            >
            <view class="right">
              <van-icon
                name="good-job-o"
                size="30rpx"
                @tap="starComment(item.commentID)"
              />
              <text>{{ item.star }}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="btns">
      <view class="btn" @tap="collectTap"> <text>收藏</text></view>
      <view class="btn" @tap="showCommentInput">
        <text>评论</text>
      </view>
      <view class="btn" @tap="starTap">
        <text>点赞</text>
      </view>
    </view>
    <!--图片放大-->
    <enlarge-img
      :visible="imgDialogVisible"
      :imgSrc="imgSrc"
      @enlargeClose="closeImgDialog"
    ></enlarge-img>
    <!--评论弹框-->
    <van-popup
      :show="commentInputVivisble"
      @close="closeInput"
      position="bottom"
      custom-style="height: 90%;"
      closeable
      class="comment-popup"
    >
      <view class="comment-input">
        <van-field
          :value="mycomment"
          placeholder="请输入评论"
          autosize
          type="textarea"
          @input="commentInput"
        />
        <van-button
          class="send"
          round
          type="info"
          size="small"
          @tap="sendComment"
          >发送</van-button
        >
      </view>
    </van-popup>
    <!--toast 弹框-->
    <van-toast id="van-toast" />
    <back-top
      v-if="backTopVisible"
      @hide="backTopVisible = false"
      bottom="100"
    ></back-top>
  </view>
</template>

