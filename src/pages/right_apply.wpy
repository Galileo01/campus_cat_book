<template>
  <view class="right_apply container">
    <view class="applies">
      <view class="apply-item" v-for="item in applies">
        <text>申请权限：{{ item.right }}</text>
        <van-tag :type="item.state ? 'primary' : 'danger'">{{
          item.state ? '已通过' : '未通过'
        }}</van-tag>
      </view>
    </view>
    <view class="btn">
      <van-button
        type="info"
        icon="edit"
        size="small"
        round
        @tap="inputVisible = true"
        color="#409EFF"
      ></van-button>
    </view>

    <van-popup
      :show="inputVisible"
      position="bottom"
      custom-style="height: 100%;"
      closeable
      @close="closeInput"
      class="input-popup"
    >
      <view class="popup-content">
        <view class="right">
          <text>要申请的权限:</text>
          <van-dropdown-menu>
            <van-dropdown-item
              :value="right"
              :options="options"
              @change="change($event, 'right')"
            />
          </van-dropdown-menu>
        </view>
        <view class="email">
          <text>邮箱:</text>
          <van-field
            clearable
            @input="input"
            placeholder="请输入邮箱"
            required
            placeholder-style="font-size:12px"
            :value="email"
          >
          </van-field>
        </view>
        <view class="btns">
          <van-button
            size="small"
            type="danger"
            color="#F56C6C"
            @tap="closeInput()"
            >取消</van-button
          >
          <van-button size="small" type="info" color="#409EFF" @tap="submit"
            >提交</van-button
          >
        </view>
      </view>
    </van-popup>

    <van-toast id="van-toast" />
  </view>
</template>

