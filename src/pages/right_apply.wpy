<script>
import wepy from '@wepy/core';
import Toast from 'components/vant/toast/toast';
wepy.page({
  data: {
    applies: [],
    inputVisible: false,
    options: [
      { text: '信息录入', value: 0 },
      { text: '信息录入', value: 1 },
    ],
    right: 0,
    email: '',
  },
  methods: {
    getData() {
      this.applies = [
        {
          right: '信息录入',
          state: 0,
          id: 0,
          user: 'user1',
        },
        {
          right: '信息录入',
          state: 1,
          id: 0,
          user: 'user1',
        },
      ];
    },
    change({ $wx: { detail } }) {
      this.right = detail;
      //   console.log(detail);
    },
    input({ $wx: { detail } }) {
      this.email = detail;
      //   console.log(detail);
    },
    closeInput() {
      this.inputVisible = false;
      this.right = 0;
      this.email = '';
    },
    submit() {
      Toast.loading({
        mask: true,
        duration: 0, //一致显示toast
        message: '提交中...',
      });
      //请求成功 后关闭，模拟
      const timer = setTimeout(() => {
        Toast.clear();
        clearTimeout(timer);
        this.closeInput();
      }, 500);
    },
  },
  onLoad() {
     wx.showNavigationBarLoading();
    this.getData();
    wx.hideNavigationBarLoading();
  },
});
</script>
