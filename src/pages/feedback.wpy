<template>
  <view class="feedback container">
    <view class="bugs">
      <view
        class="bug-item"
        v-for="(item, index) in feedbacks"
        :key="index"
        @tap="$navigate('/pages/feedback_detail?id=' + item.fbid)"
      >
        <view class="title">{{ item.title }}</view>
        <view class="footer">
          <view class="time">{{ item.time }}</view>
          <view class="state"
            ><van-tag :type="item.state ? 'primary' : 'danger'">{{
              item.state ? '已处理' : '未处理'
            }}</van-tag></view
          >
        </view>
      </view>
    </view>
    <view class="btn">
      <van-button
        type="info"
        icon="edit"
        size="small"
        round
        @tap="inputVisible = true"
        color="#409EFF"
      ></van-button>
    </view>
    <van-popup
      :show="inputVisible"
      position="bottom"
      custom-style="height: 100%;"
      closeable
      @close="closeInput"
      class="input-popup"
    >
      <view class="wapper">
        <view class="form">
          <view class="form-item">
            <text>标题</text>
            <van-field
              placeholder="请输入标题、最多20字"
              placeholder-style="font-size:12px"
              :maxlength="20"
              required
              clearable
              focus
              @input="inputHandle($event, 'title')"
              :value="formData.title"
            ></van-field>
          </view>
          <view class="form-item content">
            <text>反馈或问题描述</text>
            <van-field
              placeholder-style="font-size:12px"
              :maxlength="200"
              type="textarea"
              autosize
              clearable
              required
              @input="inputHandle($event, 'content')"
              :value="formData.content"
            ></van-field>
          </view>
          <view class="form-item">
            <text>图片材料(最多3张\选填)</text>
            <view class="imgs">
              <image v-for="item in formData.imgs" :src="item"></image>
              <van-icon
                name="add-o"
                size="100rpx"
                @tap="chooseImg"
                color="#409EFF"
              ></van-icon>
            </view>
          </view>
          <view class="form-item connect">
            <text>邮箱</text>
            <van-field
              placeholder-style="font-size:12px"
              :value="formData.connect"
              :maxlength="20"
              required
              clearable
              focus
              @input="inputHandle($event, 'connect')"
            ></van-field>
          </view>
        </view>
        <view class="btns">
          <van-button
            size="small"
            type="danger"
            color="#F56C6C"
            @tap="closeInput"
            >取消</van-button
          >
          <van-button size="small" type="info" color="#409EFF" @tap="submit"
            >提交</van-button
          >
        </view>
      </view>
    </van-popup>
    <van-toast id="van-toast" />
  </view>
</template>

