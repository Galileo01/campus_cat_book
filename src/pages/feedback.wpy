<script>
import wepy from '@wepy/core';
import Toast from 'components/vant/toast/toast';
wepy.page({
  data: {
    feedbacks: [],
    inputVisible: false,
    formData: {
      title: '',
      content: '',
      imgs: [],
      connect: '',
      connectType: 'tel',
    },
  },
  methods: {
    getData() {
      const data = [
        {
          title: '视频无法预览',
          content: '动态发布页面，视频选择后无法预览',
          imgs: [],
          connect: '', //联系方式
          time: '2020 0705',
          state: 0, //当前状态
          userID: 1,
          fbid: 0,
        },
        {
          title: '视频无法预览',
          content: '动态发布页面，视频选择后无法预览',
          imgs: [],
          connect: '', //联系方式
          time: '2020 0705',
          state: 1, //当前状态
          userID: 1,
          fbid: 1,
        },
      ];
      this.feedbacks = data;
    },
    inputHandle({ $wx: { detail } }, key) {
      console.log(detail, key);
      this.formData[key] = detail;
    },
    closeInput() {
      this.inputVisible = false;
      this.formData = {
        title: '',
        content: '',
        imgs: [],
        connect: '',
      };
    },
    chooseImg() {
      const self = this;
      wx.chooseImage({
        sizeType: ['original'],
        sourceType: ['camera', 'album'],
        success(res) {
          const tempFiles = res.tempFilePaths;
          console.log(res, tempFiles);
          self.formData.imgs = tempFiles;
        },
      });
    },
    submit() {
      Toast.loading({
        mask: true,
        duration: 0, //一致显示toast
        message: '提交中...',
      });
      //请求成功 后关闭，模拟
      const timer = setTimeout(() => {
        Toast.clear();
        clearTimeout(timer);
        this.getData(); //刷新数据
        this.closeInput();
      }, 500);
    },
  },
  onLoad() {
    wx.showNavigationBarLoading();
    this.getData();
    wx.hideNavigationBarLoading();
  },
});
</script>

